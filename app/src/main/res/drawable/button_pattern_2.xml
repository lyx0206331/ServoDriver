<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#E0FFFF" android:startColor="#008B8B" />
            <stroke android:width="2dp" android:color="#dcdcdc" />
            <corners android:radius="6dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="#FF00FF" android:startColor="#68228B" />
            <stroke android:width="2dp" android:color="#dcdcdc" />
            <corners android:radius="6dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
    <!-- focused -->

    <!--
                    android:startColor="#FF00FF"
                    android:endColor="#68228B"

                    android:startColor="#551A8B"
                    android:endColor="#AB82FF"

                    android:startColor="#483D8B"
                    android:endColor="#8470FF"

     -->
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#E0FFFF"

                android:startColor="#008B8B" />
            <stroke android:width="2dp" android:color="#dcdcdc" />
            <corners android:radius="6dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
    <!-- default -->
</selector>
