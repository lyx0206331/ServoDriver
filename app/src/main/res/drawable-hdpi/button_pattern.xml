<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient android:angle="270" android:endColor="#D1EEEE" android:startColor="#0000FF" />
            <stroke android:width="2dp" android:color="#dcdcdc" />
            <corners android:radius="6dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape> 
    </item>

        <!-- pressed -->
    
        
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="#B0E2FF" android:startColor="#0000FF" />
            <stroke android:width="2dp" android:color="#dcdcdc" />
            <corners android:radius="6dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>  
    </item>
       <!-- focused -->
    
       
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#B0E2FF" android:startColor="#0000CD" />
            <stroke android:width="2dp" android:color="#dcdcdc" />
            <corners android:radius="6dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>  
    </item> 
    <!-- default -->
</selector>
